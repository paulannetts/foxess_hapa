{
    "name": "paulan/ha_test01",
    "image": "mcr.microsoft.com/devcontainers/python:3.13",
    "postCreateCommand": "/home/vscode/post_create.sh",
    "forwardPorts": [
        8123
    ],
    "portsAttributes": {
        "8123": {
            "label": "Home Assistant",
            "onAutoForward": "notify"
        }
    },
    "workspaceMount": "source=foxess-hapa,target=/workspaces,type=volume",
	"workspaceFolder": "/workspaces",
    "mounts": [
		// mount the post_create script to initialise the workspace on first run
		"type=bind,src=${localWorkspaceFolder}/scripts/devcontainer_post_create.sh,dst=/home/vscode/post_create.sh",
    ],
    "runArgs": [
		"--name",
		"devcontainer-foxess-hapa",
		"--hostname",
		"foxess_hapa"
    ],

    // initialise the volume to redirect caches and init git repo
	// as we set the workspaceFolder to poly_core we need to create it early!
    "customizations": {
        "vscode": {
            "extensions": [
                "charliermarsh.ruff",
                "github.vscode-pull-request-github",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ryanluker.vscode-coverage-gutters"
            ],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "zsh",
                "terminal.integrated.profiles.linux": {
                    "zsh": {
                        "path": "/bin/zsh"
                    }
                },
                "files.eol": "\n",
                "editor.tabSize": 4,
                "editor.formatOnPaste": true,
                "editor.formatOnSave": true,
                "editor.formatOnType": false,
                "files.trimTrailingWhitespace": true,
                "python.analysis.typeCheckingMode": "basic",
                "python.analysis.autoImportCompletions": true,
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "[python]": {
                    "editor.defaultFormatter": "charliermarsh.ruff"
                }
            }
        }
    },
    "remoteUser": "vscode",
    "features": {
        "ghcr.io/devcontainers-extra/features/uv:1": {},
        "ghcr.io/devcontainers/features/node:1": {
			"version": "22.22.0"
		},
        "ghcr.io/devcontainers-extra/features/apt-packages:1": {
            "packages": "ffmpeg,libturbojpeg0,libpcap-dev"
        }
    },
}